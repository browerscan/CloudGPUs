# ===========================================
# CloudGPUs.io Environment Configuration
# ===========================================
# Copy to .env and fill in values
# NEVER commit .env to version control

# --- Core Settings ---
NODE_ENV=production
LOG_LEVEL=info
ADMIN_EMAIL=admin@cloudgpus.io
PUBLIC_SITE_URL=https://cloudgpus.io

# --- Ops Dashboard (Basic Auth) ---
# Protects https://api.cloudgpus.io/ops (internal ops dashboard)
ADMIN_USER=admin
ADMIN_PASSWORD=change-me

# Scraper mode: hybrid (default) | live | static
# - hybrid: use APIs when keys exist, otherwise pricing-page heuristics, otherwise static
# - live: disable static fallbacks (missing data becomes empty)
# - static: deterministic local data for all providers
SCRAPER_MODE=hybrid

# --- PayloadCMS ---
# Generate with: openssl rand -base64 32
PAYLOAD_SECRET=your-super-secret-key-min-32-chars
PAYLOAD_PUBLIC_SERVER_URL=https://api.cloudgpus.io

# --- Authentication (JWT) ---
# JWT secret for user authentication (falls back to PAYLOAD_SECRET if not set)
# Generate with: openssl rand -base64 32
JWT_SECRET=

# --- Database (Supabase PostgreSQL) ---
# Get from Supabase dashboard or existing .env
DB_PASSWORD=your-supabase-db-password
DATABASE_URI=postgresql://postgres:${DB_PASSWORD}@supabase-db:5432/postgres?schema=cloudgpus

# --- Redis (BullMQ) ---
REDIS_URL=redis://redis:6379/0

# --- CORS Origins (comma-separated) ---
CORS_ORIGINS=https://cloudgpus.io,https://www.cloudgpus.io

# --- Affiliate postback (optional) ---
# Used for tracking conversions / revenue when your affiliate network supports server-to-server callbacks.
# Pass the click id through to your affiliate URL as cg_click_id and configure the network to call back:
#   https://api.cloudgpus.io/api/affiliate/postback?click_id={cg_click_id}&external_id=...&revenue=...&secret=...
AFFILIATE_POSTBACK_SECRET=

# ===========================================
# GPU Provider API Keys
# ===========================================

# Lambda Labs - https://cloud.lambdalabs.com/api-keys
LAMBDA_API_KEY=

# RunPod - https://www.runpod.io/console/user/settings
RUNPOD_API_KEY=

# Vast.ai - https://cloud.vast.ai/account/
VASTAI_API_KEY=

# CoreWeave - Kubernetes config or token
COREWEAVE_API_KEY=

# Nebius - https://console.nebius.ai/
NEBIUS_API_KEY=

# GMI Cloud - https://docs.gmicloud.ai/
GMI_API_KEY=

# Voltage Park - https://docs.voltagepark.com/
VOLTAGEPARK_API_KEY=

# io.net - https://io.net/
IONET_API_KEY=

# Hyperstack - https://docs.hyperstack.cloud/
HYPERSTACK_API_KEY=

# TensorDock - https://dashboard.tensordock.com/
TENSORDOCK_API_KEY=

# Scaleway - https://console.scaleway.com/
SCALEWAY_API_KEY=

# ===========================================
# SOAX Proxy (optional, recommended for scraping)
# ===========================================
SOAX_PROXY_URL=http://user:pass@gate.soax.com:5000

# ===========================================
# Notifications
# ===========================================

# SMTP (for email alerts)
# SendGrid, Mailgun, or other SMTP provider
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=
SMTP_FROM_NAME=CloudGPUs.io
SMTP_FROM_EMAIL=no-reply@cloudgpus.io
SUPPORT_EMAIL=support@cloudgpus.io

# Token hashing / preferences
# Use a unique secret for token hashing + email preference tokens (optional; falls back to JWT_SECRET/PAYLOAD_SECRET)
TOKEN_PEPPER=
PREFERENCES_TOKEN_SECRET=

# Slack Webhook (for alerts)
# https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# ===========================================
# Cloudflare R2 (File Storage)
# ===========================================
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=cloudgpus-uploads
R2_PUBLIC_URL=https://cdn.cloudgpus.io

# ===========================================
# Monitoring
# ===========================================
# Sentry DSN for error tracking
SENTRY_DSN=
